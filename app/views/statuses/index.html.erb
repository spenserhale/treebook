<h1 class="page-header">All Your Status Are Belong To Treebook!</h1>

<p><em>Feel like a hipster! Be on the newest, most exclusive social network around!</em></p>

<%= link_to "Post a New status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>

  <div class="status"> 
    <strong><%= status.user.full_name %></strong>
    <p><%= status.content %></p>
    <div class="meta"> 
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
        <%= link_to "Edit", edit_status_path(status) %>
        <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>
    </div>
  </div>

<% end %>


